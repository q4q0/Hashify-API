// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EndPoint {
  endpoint_id     Int     @id @default(autoincrement())
  path            String  @unique
  method          Method? @relation(fields: [methodMethod_id], references: [method_id])
  methodMethod_id Int?
}

model Method {
  method_id    Int        @id @default(autoincrement())
  name         String
  endpoint     String     @unique
  minKeyLength Int        @default(0)
  maxKeyLength Int        @default(0)
  EndPoint     EndPoint[]
}

model Hash {
  hash_id      Int    @id @default(autoincrement())
  digest       String @unique
  digestEncode String
  type         String
  key          String @default("")
}
