// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EndPoint {
  endpoint_id     Int     @id @default(autoincrement())
  path            String  @unique
  method          Method? @relation(fields: [methodMethod_id], references: [method_id])
  methodMethod_id Int?
}

model Method {
  method_id    Int        @id @default(autoincrement())
  name         String
  endpoint     String     @unique
  minKeyLength Int        @default(0)
  maxKeyLength Int        @default(0)
  EndPoint     EndPoint[]
}

model Hashed {
  hash_id      Int    @id @default(autoincrement())
  digest       String @unique
  digestEncode String
  type         String
  key          String @default("")
}

model Encrypted {
  encrepted_id    Int       @id @default(autoincrement())
  encrypted_value String
  type            String
  secret_key      String
  dcrypted_value  Dcrypted? @relation(fields: [dcrypted_id], references: [dcrypted_id])
  dcrypted_id     Int?
}

model Dcrypted {
  dcrypted_id    Int         @id @default(autoincrement())
  dcrypted_value String
  type           String
  secret_key     String
  Encrypted      Encrypted[]
}
